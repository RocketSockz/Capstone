{
  "properties": {
    "document": {
      "properties": {
        "databases": {
          "items": {
            "if": {
              "properties": {
                "database_name": {
                  "not": {
                    "enumIgnoreCase": ["master", "msdb", "model", "tempdb"]
                  }
                }
              }
            },
            "then": {
              "properties": {
                "encryptionSettings": {
                  "items": {
                    "if": {
                      "properties": {
                        "key_type": {
                          "constIgnoreCase": "asymmetric"
                        }
                      }
                    },
                    "then": {
                      "properties": {
                        "key_length": {
                          "minimum": 2048
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}