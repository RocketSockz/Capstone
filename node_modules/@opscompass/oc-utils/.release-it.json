{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release ${version} [skip ci]",
    "requireCleanWorkingDir": false,
    "pushArgs": "-o ci.skip --follow-tags",
    "buildCommand": "changelog",
    "changelogCommand": "changelog ${version} -f -"
  },
  "gitlab": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
